<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"

>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#e4e4e3"
        app:cardElevation="0dp"
        android:alpha="1"
        app:cardCornerRadius="2dp" >
        <RelativeLayout
            android:layout_width="fill_parent"

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_below="@+id/xy"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout">
                <com.zonk.fbtest.Views.BariolBoldTextView
                    android:textSize="30dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#626262"
                    android:layout_width="wrap_content"
                    android:text="Shoutout"
                    android:layout_height="wrap_content" />

                <com.zonk.fbtest.Views.BariolBoldTextView
                    android:layout_width="wrap_content"
                    android:text="by PRASEEM MEHRA"
                    android:id="@+id/name"
                    android:layout_marginLeft="20dp"
                    android:visibility="visible"

                    android:textSize="18sp"
                    android:textColor="#424242"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.zonk.fbtest.Views.BariolBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Working on"
                        android:textColor="#626262"
                        android:textSize="14sp" />
                    <com.zonk.fbtest.Views.BariolBoldTextView
                        android:layout_width="240dp"
                        android:text="PraseemPraseemPraseemPraseemPraseemPraseemPraseemPraseemPraseemPraseemPraseemPraseem"
                        android:layout_marginBottom="00dp"
                        android:id="@+id/working"
                        android:layout_marginRight="40dp"
                        android:textSize="12sp"
                        android:textColor="#7c7c7c"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="00dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.zonk.fbtest.Views.BariolBoldTextView
                        android:layout_width="wrap_content"
                        android:text="Need help with"
                        android:id="@+id/username"
                        android:visibility="visible"
                        android:layout_marginTop="10dp"

                        android:textSize="18sp"
                        android:textColor="#222222"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:id="@+id/logo"
                        android:layout_gravity="center"
                        android:src="@drawable/node"
                        android:layout_height="30dp" />
                    <com.zonk.fbtest.Views.BariolBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/linearLayout"
                        android:layout_alignStart="@+id/linearLayout"
                        android:layout_below="@+id/xy"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:text="ANDROID"
                        android:id="@+id/skillname"
                        android:textColor="#424242"
                        android:textSize="28sp" />

                </LinearLayout>

                <com.zonk.fbtest.Views.BariolBoldTextView
                    android:textSize="20sp"
                    android:text="Add Message"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/newpink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_margin="20dp"
                    android:padding="8dp"
                    android:layout_height="100dp"
                    android:id="@+id/message"
                    android:background="#cacaca"/>

                <com.zonk.fbtest.Views.BariolBoldTextView
                    android:textSize="20sp"
                    android:text="DONE"
                    android:background="#424242"
                    android:paddingLeft="8dp"
                    android:id="@+id/done"
                    android:paddingRight="8dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="6dp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>