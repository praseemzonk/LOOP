<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#fafafa"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:id="@+id/main"
    android:background="#fafafa"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">


    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="fill_parent">
            <com.eftimoff.androipathview.PathView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pathView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pathColor="@color/neworange"
                app:pathWidth="3dp"/>
            <com.eftimoff.androipathview.PathView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/circle6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pathColor="@color/newtwo"
                app:pathWidth="3dp"/>

            <com.eftimoff.androipathview.PathView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/circle1"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pathColor="@color/newtwo"
                app:pathWidth="3dp"/>
            <com.eftimoff.androipathview.PathView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pathView8"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pathColor="@color/newtwo"
                app:pathWidth="3dp"/>

            <com.eftimoff.androipathview.PathView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/circle5"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pathColor="@color/newtwo"
                app:pathWidth="3dp"/>
            <com.eftimoff.androipathview.PathView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pathView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pathColor="@color/newtwo"
                app:pathWidth="3dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <com.eftimoff.androipathview.PathView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pathView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pathColor="@color/newone"
                app:pathWidth="3dp" />
            <com.eftimoff.androipathview.PathView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/circle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pathColor="@color/newone"
                app:pathWidth="3dp" />

            <com.eftimoff.androipathview.PathView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pathView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pathColor="@color/newone"
                app:pathWidth="3dp" />

            <com.eftimoff.androipathview.PathView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/circle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pathColor="@color/newone"
                app:pathWidth="3dp" />
            <com.eftimoff.androipathview.PathView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pathView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pathColor="@color/newone"
                app:pathWidth="3dp" />
            <com.eftimoff.androipathview.PathView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pathColor="@color/newone"
                app:pathWidth="3dp"/>


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="fill_parent">



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="fill_parent">




        </RelativeLayout></LinearLayout>


</LinearLayout>
    <RelativeLayout
        android:id="@+id/abc"
        android:background="@android:color/transparent"
        android:layout_width="100dp"
        android:layout_centerInParent="true"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_new"/>


        </RelativeLayout>


    <LinearLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_below="@+id/abc"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.zonk.fbtest.Views.LoopTextView
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:alpha="1"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:textColor="#424242"
            android:text="L"
            android:layout_height="wrap_content" />

        <com.zonk.fbtest.Views.LoopTextView
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:alpha="1"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:textColor="@color/neworange"
            android:text="O"
            android:layout_height="wrap_content" />
        <com.zonk.fbtest.Views.LoopTextView
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:alpha="1"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:textColor="@color/newpink"
            android:text="O"
            android:layout_height="wrap_content" />
        <com.zonk.fbtest.Views.LoopTextView
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:alpha="1"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:textColor="#424242"
            android:text="P"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <com.zonk.fbtest.Views.LoopTextView
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:alpha="1"
        android:textSize="22sp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/title"
        android:textColor="#424242"
        android:text="Helping developers stay in the loop!"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/loading_conatainer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <io.github.yuweiguocn.lib.squareloading.SquareLoading
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:squareColor="@color/neworange"
            app:squareSize="8dp"
            app:squareCorner="10dp"
            app:dividerSize="3dp"
            android:layout_gravity="center"
            app:xCount="3"
            app:yCount="3"
            />
    </LinearLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:id="@+id/tv"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical">


        <com.facebook.login.widget.LoginButton
            xmlns:fb="http://schemas.android.com/apk/res-auto"
            style="@style/FacebookLoginButton"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:background="#f2f2f2"
            android:text="CONNECT FB"
            android:textColor="@color/fb_blue"
            android:textSize="24sp"
            fb:com_facebook_login_text=""
            fb:com_facebook_logout_text=""
            android:id="@+id/login_button"
            android:layout_height="fill_parent"/>


        <com.zonk.fbtest.Views.BariolBoldTextView
            android:id="@+id/fbText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/box_offwhite2"
            android:text="LOGIN WITH FACEBOOK"
            android:textColor="@color/fb_blue"
            android:textSize="16sp" />
        <!-- Child Views -->


    </RelativeLayout>

    <Button
        android:layout_below="@+id/title"
        android:id="@+id/login_button_linkedin"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/link"
        android:onClick="login"
        android:layout_marginBottom="15dp"/>
    </RelativeLayout>