<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#e4e4e3"
        app:cardElevation="0dp"
        android:alpha=".9"
        app:cardCornerRadius="2dp" >
        <RelativeLayout
            android:layout_width="fill_parent"

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.zonk.fbtest.Views.BariolBoldTextView
                        android:layout_width="wrap_content"
                        android:text="Need help with"
                        android:visibility="visible"

                        android:textSize="18sp"
                        android:textColor="#222222"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:id="@+id/photo"
                        android:layout_gravity="center"
                        android:src="@drawable/node"
                        android:layout_height="30dp" />
                    <com.zonk.fbtest.Views.BariolBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/linearLayout"
                        android:layout_alignStart="@+id/linearLayout"
                        android:layout_below="@+id/xy"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:text="ANDROID"
                        android:id="@+id/username"
                        android:textColor="#424242"
                        android:textSize="28sp" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.zonk.fbtest.Views.BariolBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Working on"
                        android:textColor="#626262"
                        android:textSize="14sp" />
                    <com.zonk.fbtest.Views.BariolBoldTextView
                        android:layout_width="240dp"
                        android:text="PraseemPraseemPraseemPraseemPraseemPraseemPraseemPraseemPraseemPraseemPraseemPraseem"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/working"
                        android:layout_marginRight="40dp"
                        android:textSize="12sp"
                        android:textColor="#7c7c7c"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

