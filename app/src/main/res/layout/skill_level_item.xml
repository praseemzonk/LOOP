<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="140dp">

    <com.xw.repo.BubbleSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:bsb_bubble_color="#dadada"
        app:bsb_bubble_text_color="#7c7c7c"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:bsb_is_float_type="false"
        app:bsb_max="5"
        android:id="@+id/bar"
        app:bsb_track_size="7dp"
        app:bsb_min="0"
        app:bsb_progress="0"
        app:bsb_second_track_color="@color/neworange"
        app:bsb_section_count="5"
        app:bsb_section_text_position="bottom_sides"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_track_color="#e4e4e3"/>

    <com.zonk.fbtest.Views.BariolBoldTextView
        android:layout_width="wrap_content"
        android:text="ANDROID"

        android:textColor="@color/neworange"
        android:background="@drawable/item8"
        android:paddingLeft="20dp"
        android:id="@+id/skill"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:paddingRight="20dp"
        android:paddingTop="6dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:paddingBottom="6dp"
        android:layout_height="wrap_content" />
</LinearLayout>