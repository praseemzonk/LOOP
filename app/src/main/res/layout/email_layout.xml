<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="360dp"
    android:layout_margin="0dp"
    android:padding="18dp"
    android:background="#f2f2f2"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.zonk.fbtest.Views.BariolBoldTextView
                android:layout_width="wrap_content"
                android:text="TO"
                android:textSize="28sp"
                android:textColor="#424242"
                android:layout_height="wrap_content" />

            <com.zonk.fbtest.Views.BariolBoldTextView
                android:layout_width="wrap_content"
                android:text="PRASEEM"
                android:layout_marginLeft="20dp"
                android:textSize="28sp"
                android:id="@+id/name"
                android:textColor="#424242"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <com.zonk.fbtest.Views.BariolBoldTextView
            android:layout_width="wrap_content"
            android:text="SUBJECT"
            android:textSize="20sp"
            android:textColor="#626262"
            android:layout_height="wrap_content" />
        <com.zonk.fbtest.Views.RobotoBlackEditText
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:singleLine="true"
            android:hint=" subject"
            android:layout_width="fill_parent"
            android:id="@+id/subject"
            android:layout_height="40dp"
            android:background="#e4e4e3"/>

        <com.zonk.fbtest.Views.BariolBoldTextView
            android:layout_width="wrap_content"
            android:text="MESSAGE"
            android:textSize="20sp"
            android:textColor="#626262"
            android:layout_height="wrap_content" />
        <com.zonk.fbtest.Views.RobotoBlackEditText
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:singleLine="true"
            android:hint=" message"
            android:layout_width="fill_parent"
            android:id="@+id/message"
            android:layout_height="140dp"
            android:background="#e4e4e3"/>
        <com.zonk.fbtest.Views.BariolBoldTextView
            android:layout_width="wrap_content"
            android:text="DONE"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/done"

            android:paddingTop="4dp"
            android:paddingBottom="14dp"
            android:background="#e4e4e3"
            android:layout_marginTop="30dp"
            android:textColor="#424242"
            android:layout_height="wrap_content" ></com.zonk.fbtest.Views.BariolBoldTextView>

    </LinearLayout>
</RelativeLayout>